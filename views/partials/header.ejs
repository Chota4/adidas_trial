<header class="bg-black text-white py-4" role="banner">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href="/" class="flex items-center" aria-label="Adidas Store Home">
      <img src="/images/adidas-logo.png" alt="Adidas Logo" class="h-10 mr-2" />
      <span class="text-xl font-bold">ADIDAS STORE</span>
    </a>
    
    <nav aria-label="Primary Navigation" class="flex items-center space-x-4">
      <% if (user) { %>
        <a href="/users/profile" class="flex items-center" aria-label="User Profile">
          <img src="<%= user.avatar %>" alt="<%= user.name %>" class="w-8 h-8 rounded-full mr-2" />
          <span><%= user.name %></span>
        </a>
        <a href="/auth/logout" class="nav-link" role="button">Logout</a>
      <% } else { %>
        <a href="/auth/login" class="nav-link" role="button">Login</a>
        <a href="/auth/register" class="nav-link" role="button">Register</a>
      <% } %>
      <a href="/cart" class="nav-link flex items-center" aria-label="Shopping Cart">
        <i class="fas fa-shopping-cart mr-1" aria-hidden="true"></i>
        <span id="cart-count" aria-live="polite">0</span>
      </a>
    </nav>
  </div>
</header>
