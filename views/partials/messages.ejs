<% if (messages.success) { %>
  <div class="alert alert-success" role="alert">
    <%= messages.success %>
  </div>
<% } %>

<% if (messages.error) { %>
  <div class="alert alert-error" role="alert">
    <%= messages.error %>
  </div>
<% } %>

<% if (messages.info) { %>
  <div class="alert alert-info" role="alert">
    <%= messages.info %>
  </div>
<% } %>
