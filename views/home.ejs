<%- include('./partials/head', { title: 'Adidas Official Store' }) %>

<main class="homepage">
  <!-- Hero Section -->
  <section class="relative h-[80vh] bg-black">
    <div class="absolute inset-0">
      <img src="/images/hero-banner.jpg" alt="Adidas Hero" class="w-full h-full object-cover opacity-70">
    </div>
    <div class="relative container mx-auto px-4 h-full flex items-center">
      <div class="text-white max-w-2xl">
        <h1 class="text-5xl md:text-6xl font-bold mb-4">IMPOSSIBLE IS NOTHING</h1>
        <p class="text-xl mb-8">Discover the latest collection of Adidas sportswear and shoes.</p>
        <a href="/products" class="bg-white text-black px-8 py-3 rounded-md text-lg font-semibold hover:bg-gray-200 transition duration-300">
          Shop Now
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Categories -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Shop By Category</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Men's Category -->
        <a href="/products/men" class="group relative h-96 overflow-hidden rounded-lg">
          <img src="/images/mens-category.jpg" alt="Men's Collection" class="w-full h-full object-cover transition duration-300 group-hover:scale-105">
          <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
            <h3 class="text-white text-2xl font-bold">Men's Collection</h3>
          </div>
        </a>

        <!-- Women's Category -->
        <a href="/products/women" class="group relative h-96 overflow-hidden rounded-lg">
          <img src="/images/womens-category.jpg" alt="Women's Collection" class="w-full h-full object-cover transition duration-300 group-hover:scale-105">
          <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
            <h3 class="text-white text-2xl font-bold">Women's Collection</h3>
          </div>
        </a>

        <!-- Kids' Category -->
        <a href="/products/kids" class="group relative h-96 overflow-hidden rounded-lg">
          <img src="/images/kids-category.jpg" alt="Kids' Collection" class="w-full h-full object-cover transition duration-300 group-hover:scale-105">
          <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
            <h3 class="text-white text-2xl font-bold">Kids' Collection</h3>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Featured Products</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
          <% featuredProducts.forEach(product => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden group">
              <div class="relative h-64 overflow-hidden">
                <img src="<%= product.image %>" alt="<%= product.name %>" 
                     class="w-full h-full object-cover transition duration-300 group-hover:scale-105">
                <% if (product.discount) { %>
                  <span class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded">
                    -<%= product.discount %>%
                  </span>
                <% } %>
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
                <p class="text-gray-600 mb-2"><%= product.category %></p>
                <div class="flex justify-between items-center">
                  <div>
                    <% if (product.originalPrice !== product.price) { %>
                      <span class="text-gray-400 line-through mr-2">$<%= product.originalPrice %></span>
                    <% } %>
                    <span class="text-lg font-bold">$<%= product.price %></span>
                  </div>
                  <a href="/products/<%= product.id %>" class="text-black hover:text-gray-700">
                    <i class="fas fa-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-center col-span-4">No featured products available.</p>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 bg-black text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Join Our Newsletter</h2>
      <p class="mb-8 text-gray-300">Subscribe to get special offers, free giveaways, and updates.</p>
      <form class="max-w-md mx-auto flex gap-4">
        <input type="email" placeholder="Enter your email" 
               class="flex-1 px-4 py-2 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-white">
        <button type="submit" class="bg-white text-black px-6 py-2 rounded-md hover:bg-gray-200 transition duration-300">
          Subscribe
        </button>
      </form>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <!-- Free Shipping -->
        <div>
          <i class="fas fa-truck text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Free Shipping</h3>
          <p class="text-gray-600">On orders over $100</p>
        </div>

        <!-- Secure Payment -->
        <div>
          <i class="fas fa-lock text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Secure Payment</h3>
          <p class="text-gray-600">100% secure payment</p>
        </div>

        <!-- 24/7 Support -->
        <div>
          <i class="fas fa-headset text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">24/7 Support</h3>
          <p class="text-gray-600">Dedicated support</p>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('./partials/footer') %>
